{
	"compilerOptions": {
		"outDir": "./dist",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "esnext",
		"lib": ["esnext", "dom", "dom.iterable"],
		"types": ["bun"],
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		// "isolatedModules": true,
		"strict": true,
		"noImplicitOverride": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"module": "NodeNext",
		"sourceMap": true,
		"declaration": true,
		"stripInternal": true,
	},
	"include": ["lib"],
}
